#!/usr/bin/env bash

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`

function usage() {
  echo "Tool for sending data to Logger app"
  echo "Usage: $script [--gateway <hostname-port>]"
  echo ""
  echo "  Options"
  echo "    --gateway   Specifies the hostname and port gateway is running on.(Default: localhost:10000)"
  echo "    --help      This help message"
  echo ""
}

gateway="localhost:10000"
  while [ $# -gt 0 ]
  do
    case "$1" in
      --gateway) shift; gateway="$1"; shift;;
      --size) shift; size=$1; shift;;
      *)  usage; exit 1
     esac
  done
OLD_IFS=IFS
IFS=$'\n'
lines=`cat "$bin"/../src/test/resources/apache.accesslog`
for line in $lines
do
  curl -X POST -d "$line" http://$gateway/v2/streams/log-events;
done
IFS=$OLD_IFS
