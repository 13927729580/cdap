{
  "id": "Stream",
  "groups" : {
    "position": [ "group1", "group2" ],
    "group1": {
       "display" : "General",
       "position" : [ "name", "duration", "delay"],
       "fields" : {
          "name" : {
             "widget": "textbox",
             "label": "Stream Name"
          },

          "duration" : {
             "widget": "textbox",
             "label": "Process Time Window"
          },

          "schema" : {
             "widget": "schema",
             "label" : "Schema",
             "schema-types" : [ "int", "string", "boolean" ],
             "schema-default-type" : "string"
          },

          "delay" : {
             "widget": "textbox",
             "label": "Process Delay"
          }
       }
    },

    "group2" : {
       "display" : "Format & Schema",
       "position" : [ "format", "schema" ],
       "fields" : {
          "format" : {
             "widget" : "select",
             "label"  : "Format",
             "properties" : {
               "values" : [ "csv", "tsv" ],
               "default" : "csv"
             }
          },
          "schema" : {
             "widget": "schema",
             "label" : "Schema",
             "schema-types" : [ "int", "string", "boolean" ],
             "schema-default-type" : "string"
          }
       } 
    }
  }
}
